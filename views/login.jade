include mixins
extends layout

block content
  div.container
    div.wrapper
      form.form-signin#login(action='/login', method="post")
        h4.form-signin-heading Please login to your account
        input#username.form-control(type='text', name='username', placeholder='Username', required='', autofocus='')
        input#password.form-control(type='password', name='password', placeholder='Password', required='')
        button.btn.btn-lg.btn-primary.btn-block(type='submit') Login
        
  
